<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimerPro.MainPage"
             Padding="20,150,20,20">
    <StackLayout>
    <StackLayout>
            <Label x:Name="lblDisplay" Text="00:00:00" HorizontalTextAlignment="Center" FontSize="Large"/>
      
    </StackLayout>

    <StackLayout VerticalOptions="CenterAndExpand">
          <Button x:Name="btnStart" Text="Start" Clicked="Start_Clicked"/>
          <Button x:Name="btnStop" Text="Stop" Clicked="Stop_Clicked"/>
          <Button x:Name="btnReset" Text="Reset" Clicked="Reset_Clicked"/>
    </StackLayout>

    </StackLayout>
</ContentPage>

