<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marathon.MainPage"
             Padding="20,60,20,40">

    <StackLayout>
        <Label Text="Race results" HorizontalOptions="Center" FontSize="Large" />
        <ListView x:Name="ResultListView" />
        <Picker x:Name="RacePicker" Title="Please Pick A Race!" ItemDisplayBinding="{Binding race_name}" SelectedIndexChanged="RacePicker_SelectedIndexChanged"  />
            
    </StackLayout>

</ContentPage>

