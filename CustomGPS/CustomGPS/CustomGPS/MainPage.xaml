<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomGPS.MainPage"
             Padding="20,100,20,20">

    <StackLayout>
        <Label x:Name="lblLon" Text="LON: 000000" />
        <Label x:Name="lblLat" Text="LAT: 111111" />
        <Button Text="Update GPS Location" Clicked="UpdateLocation_Clicked"/>
        <Button Text="Clear" Clicked="Clear_Clicked" />
    </StackLayout>

</ContentPage>

